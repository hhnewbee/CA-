<?xml version="1.0" encoding="utf-8"?>
 <android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sidebarlayout">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:id="@+id/mainlayout"
    android:orientation="vertical" >
  <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/firstpicture"/>
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4F4F4F"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
	 <ImageView
	             android:layout_width="55dp"
	             android:layout_height="40dp"
	             android:layout_marginLeft="5dp"
	             android:src="@drawable/icon"
	             android:id="@+id/setsidebar"/>
	     <LinearLayout 
		         android:layout_width="250dp"
		         android:layout_height="30dp"
		         android:orientation="horizontal"
		   	     android:focusable="true"  
				 android:focusableInTouchMode="true" 
				 android:layout_marginLeft="18dp"
		   	     android:background="@drawable/shape">
	         <EditText 
		   	     android:layout_width="220dp"
		   	     android:layout_height="30dp"
		   	     android:layout_marginLeft="10dp"
		   	     android:singleLine="true"
		   	     android:background="@null"
		   	     android:textCursorDrawable="@drawable/cursor"
		   	     android:hint="CA应用商城"
		   	     android:id="@+id/searchingtext"/>
	         <ImageView
	             android:layout_width="match_parent"
	             android:layout_height="32dp"
	             android:src="@drawable/search32"
	             android:id="@+id/searchingbingen"
	             android:visibility="gone"
	             >
	        </ImageView>
	 </LinearLayout>
</LinearLayout>

	<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:scrollbars="none" 
        android:visibility="gone"
        android:id="@+id/searchscolloview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:id="@+id/searchlayout">
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="25dp"
	            android:gravity="center"
	            android:text="返回"
	            android:background="@drawable/stroke"
	            android:id="@+id/searchcancel"/>
        </LinearLayout>
    </ScrollView>
	
     <LinearLayout  
        android:layout_width="match_parent"
        android:layout_height="40dp"  
        android:layout_marginTop="5dp"
        >  
         <TextView  
            android:id="@+id/text1"  
            android:layout_width="match_parent" 
            android:layout_weight="1.0"
            android:layout_height="38dp"  
            android:gravity="center"  
            android:text="推荐软件"  
            android:textColor="#000000"  
            android:textSize="15.0dip" />  
         <TextView  
            android:id="@+id/text2"  
             android:layout_width="match_parent" 
            android:layout_weight="1.0"  
            android:layout_height="38dp"  
            android:gravity="center"  
            android:text="随机软件"  
            android:textColor="#000000"  
            android:textSize="15.0dip" />  
  
         <TextView  
            android:id="@+id/text3"  
            android:layout_width="match_parent" 
            android:layout_weight="1.0"
            android:layout_height="38dp"  
            android:gravity="center"  
            android:text="软件分类"  
            android:textColor="#000000"  
            android:textSize="15.0dip" />  
            
         <TextView  
            android:id="@+id/text4"  
             android:layout_width="match_parent" 
            android:layout_weight="1.0"
            android:layout_height="38dp"  
            android:gravity="center"  
            android:text="软件管理"  
            android:textColor="#000000"  
            android:textSize="15dip" />  
  </LinearLayout>  
  <android.support.v4.view.ViewPager  
       android:id="@+id/mPager"  
       android:layout_width="match_parent"  
       android:layout_height="match_parent"  
       android:layout_gravity="center"  
       android:flipInterval="30"  
       android:persistentDrawingCache="animation"
       >
  </android.support.v4.view.ViewPager>
</LinearLayout>

	<LinearLayout 
	     android:layout_width="270dp"
	     android:layout_height="match_parent"
	     android:layout_gravity="start"
	     android:background="#ffffff"
	     android:orientation="vertical"
	     android:id="@+id/sidebarpart">
  	 <ImageView 
           android:layout_width="match_parent" 
	       android:layout_height="150dp" 
	       android:src="@drawable/icon"/>
  	<LinearLayout 
	     android:layout_width="match_parent"
	     android:layout_height="40dp"
	     android:layout_gravity="start"
	     android:layout_marginTop="20dp"
	     android:orientation="horizontal">
      <ImageView 
           android:layout_width="40dp" 
	       android:layout_height="match_parent" 
	       android:layout_marginLeft="10dp"
	       android:src="@drawable/bar_share"/>
	  <TextView  
	       android:layout_width="match_parent" 
	       android:layout_height="match_parent" 
	       android:layout_marginLeft="10dp"
	       android:layout_marginTop="9dp"
	       android:text="分享软件"  
	       android:textColor="#000000"  
	       android:textSize="18.0dip" 
	       android:id="@+id/shareapptext"/>  
	 </LinearLayout>
	 
	 <LinearLayout 
	     android:layout_width="match_parent"
	     android:layout_height="40dp"
	     android:layout_gravity="start"
	     android:layout_marginTop="20dp"
	     android:orientation="horizontal">
      <ImageView 
           android:layout_width="40dp" 
	       android:layout_height="match_parent" 
	       android:layout_marginLeft="10dp"
	       android:src="@drawable/bar_about"/>
	  <TextView  
	       android:layout_width="match_parent" 
	       android:layout_height="38dp" 
	       android:layout_marginLeft="10dp"
	       android:layout_marginTop="9dp"
	       android:text="关于软件"  
	       android:textColor="#000000"  
	       android:textSize="18.0dip" 
	       android:id="@+id/aboutapptext"/>  
	  </LinearLayout>
	  
	  <LinearLayout 
	     android:layout_width="match_parent"
	     android:layout_height="40dp"
	     android:layout_gravity="start"
	     android:layout_marginTop="20dp"
	     android:orientation="horizontal">
      <ImageView 
           android:layout_width="40dp" 
	       android:layout_height="match_parent" 
	       android:layout_marginLeft="10dp"
	       android:src="@drawable/bar_checkupdate"/>
	  <TextView 
	       android:layout_width="match_parent" 
	       android:layout_height="match_parent" 
	       android:layout_marginLeft="10dp"
	       android:layout_marginTop="9dp"
	       android:text="检查更新"  
	       android:textColor="#000000"  
	       android:textSize="18.0dip" 
	       android:id="@+id/updateapptext"/>  
	  </LinearLayout>
	  <LinearLayout 
	     android:layout_width="match_parent"
	     android:layout_height="40dp"
	     android:layout_gravity="start"
	     android:layout_marginTop="20dp"
	     android:orientation="horizontal">
      <ImageView 
           android:layout_width="40dp" 
	       android:layout_height="match_parent" 
	       android:layout_marginLeft="10dp"
	       android:src="@drawable/bar_suggest"/>
	  <TextView  
	       android:layout_width="match_parent" 
	       android:layout_height="match_parent" 
	       android:layout_marginLeft="10dp"
	       android:layout_marginTop="9dp"
	       android:text="用户建议"  
	       android:textColor="#000000"  
	       android:textSize="18.0dip" 
	       android:id="@+id/suggestapptext"/>  
	  </LinearLayout>
	  
	  <LinearLayout 
	     android:layout_width="match_parent"
	     android:layout_height="40dp"
	     android:layout_gravity="start"
	     android:layout_marginTop="20dp"
	     android:orientation="horizontal">
      <ImageView 
           android:layout_width="40dp" 
	       android:layout_height="match_parent" 
	       android:layout_marginLeft="10dp"
	       android:src="@drawable/bar_official"/>
	  <TextView  
	       android:layout_width="match_parent" 
	       android:layout_height="match_parent" 
	       android:layout_marginLeft="10dp"
	       android:layout_marginTop="9dp"
	       android:text="访问官网"  
	       android:textColor="#000000"  
	       android:textSize="18.0dip" 
	       android:id="@+id/visitofficial"/>  
	  </LinearLayout>
	</LinearLayout>
</android.support.v4.widget.DrawerLayout>
